@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<meta name="description" content="Responsive Admin &amp; Dashboard Template based on Bootstrap 5">
	<meta name="author" content="AdminKit">
	<meta name="keywords" content="adminkit, bootstrap, bootstrap 5, admin, dashboard, template, responsive, css, sass, html, theme, front-end, ui kit, web">

	<link rel="preconnect" href="https://fonts.gstatic.com">


	<link rel="canonical" href="https://demo-basic.adminkit.io/pages-blank.html" />

	<title>Hanoi Tourism Admin</title>

	<link href="../../LayoutAdmin/css/app.css" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
	<style>
		.preview-img {
			max-width: 150px;
			margin: 0 1em 1em 0;
			padding: 0.5em;
			border: 1px solid #ccc;
			border-radius: 3px;
		}
	</style>
</head>
<body>
	<div class="wrapper">
		<nav id="sidebar" class="sidebar js-sidebar">
			<div class="sidebar-content js-simplebar">
				<a class="sidebar-brand" asp-area="Admin" asp-controller="HomeAdmin" asp-action="Index">
					<span class="align-middle">Hanoi Tourism Admin Page</span>
				</a>

				<ul class="sidebar-nav">
					<li class="sidebar-header">
						Manage categories
					</li>

					<li class="sidebar-item">
						<a asp-area="Admin" asp-controller="HomeAdmin" asp-action="ListDistrict" class="sidebar-link">
							<i class="fa-solid fa-chart-area"></i> <span class="align-middle">District</span>
						</a>
					</li>

					<li class="sidebar-item">
						<a asp-area="Admin" asp-controller="HomeAdmin" asp-action="ListStreet" class="sidebar-link">
							<i class="fa-solid fa-road"></i> <span class="align-middle">Street</span>
						</a>
					</li>

					<li class="sidebar-item">
						<a asp-area="Admin" asp-controller="HomeAdmin" asp-action="ListRestaurant" class="sidebar-link">
							<i class="fa-solid fa-utensils"></i> <span class="align-middle"></span>
							Restaurant
						</a>
					</li>

					<li class="sidebar-item">
						<a asp-area="Admin" asp-controller="HomeAdmin" asp-action="ListHistoricalSite" class="sidebar-link">
							<i class="fa-solid fa-monument"></i> <span class="align-middle">Historical Site</span>
						</a>
					</li>

					<li class="sidebar-item">
						<a asp-area="Admin" asp-controller="HomeAdmin" asp-action="ListCulturalLocation" class="sidebar-link">
							<i class="fa-solid fa-landmark-dome"></i> <span class="align-middle">Cultural Location</span>
						</a>
					</li>

					<li class="sidebar-item">
						<a asp-area="Admin" asp-controller="HomeAdmin" asp-action="ListLandmark" class="sidebar-link">
							<i class="fa-sharp fa-solid fa-landmark-flag"></i> <span class="align-middle">Landmark</span>
						</a>
					</li>

					@* <li class="sidebar-item">
					<a class="sidebar-link" >
					<i class="fa-solid fa-comment"></i>  <span class="align-middle">Review</span>
					</a>
					</li> *@

				</ul>


			</div>
		</nav>

		<div class="main">
			<nav class="navbar navbar-expand navbar-light navbar-bg">
				<div class="navbar-collapse collapse">
					<ul class="navbar-nav navbar-align">
						<a style="margin-right: 10px"><span class="test-dark"></span></a>

						<a href="#" onclick="confirmDelete('@Url.Action("Logout", "Access")')"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-log-out align-middle me-2"><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path><polyline points="16 17 21 12 16 7"></polyline><line x1="21" y1="12" x2="9" y2="12"></line></svg></a>

					</ul>
				</div>
			</nav>

			<main class="content">
				<div class="container-fluid p-0">

					@RenderBody()

				</div>
			</main>


		</div>
	</div>
	<script src="https://kit.fontawesome.com/7eca240bc3.js" crossorigin="anonymous"></script>
	<script src="../../LayoutAdmin/js/app.js"></script>
	<script>
		document.addEventListener("DOMContentLoaded", function () {
			// Lấy tên controller và action từ URL
			var url = window.location.pathname;
			var controller = url.split('/')[2];
			var action = url.split('/')[3];

			// Lặp qua từng thẻ <li> trong sidebar
			var sidebarItems = document.querySelectorAll('.sidebar-item');
			sidebarItems.forEach(function (item) {
				// Lấy thẻ <a> trong từng thẻ <li>
				var anchor = item.querySelector('a');
				if (anchor) {
					// Lấy asp-controller và asp-action từ thẻ <a>
					var itemController = anchor.getAttribute('asp-controller');
					var itemAction = anchor.getAttribute('asp-action');

					// Kiểm tra xem controller và action của mỗi thẻ có trùng khớp với trang hiện tại không
					if (controller === itemController && action === itemAction) {
						// Nếu trùng khớp, thêm lớp "active" vào thẻ <li>
						item.classList.add('active');
					}
				}
			});
		});
		function confirmDelete(deleteUrl) {
			if (confirm("Bạn có chắc chắn muốn đăng xuất?")) {
				window.location.href = deleteUrl;
			}
		}
	</script>


</body>
</html>
