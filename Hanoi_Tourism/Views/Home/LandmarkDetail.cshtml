
@{
    ViewData["Title"] = "LandmarkDetail";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

@model Hanoi_Tourism.ViewModels.HomeLandmarkDetailViewModel

<style>
    .imagesAttractions {
        width: 300px;
        height: 200px;
    }
</style>

<!-- About Start -->
<div class="container-fluid about py-5">
    <div class="container py-5">
        <div class="row g-5 align-items-center">
            <div class="col-lg-5">
                <div class="h-100" style="border: 50px solid; border-color: transparent #13357B transparent #13357B;">
                    <img src="@Url.Content("../LayoutIndex_Edit/images_Landmark/"+Model.landmarkImg.FirstOrDefault())" class="img-fluid w-100 h-100" alt="">
                </div>
            </div>
            <div class="col-lg-7" style="background: linear-gradient(rgba(255, 255, 255, .8), rgba(255, 255, 255, .8)), url(../1Travel/img/about-img-1.png);">
                <h5 class="section-about-title pe-3">Information</h5>
                <h1 class="mb-4">@Model.landmarkDetail.Name</h1>
                <p class="mb-4" style="text-align: justify">@Model.landmarkDetail.Description</p>

                <div class="row gy-2 gx-4 mb-4">
                    <div class="col-sm-6">
                        <p class="mb-0"><i class="fa fa-arrow-right text-primary me-2"></i>Address: @Model.landmarkDetail.Address</p>
                    </div>
                    <div class="col-sm-6">
                        <p class="mb-0"><i class="fa fa-arrow-right text-primary me-2"></i>OpenningHours: @Model.landmarkDetail.OpeningHours</p>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- About End -->
<!-- Travel Guide Start -->
<div class="container-fluid guide py-5">
    <div class="container py-5">
        <div class="mx-auto text-center mb-5" style="max-width: 900px;">
            <h5 class="section-title px-3">More</h5>
            <h1 class="mb-0">Landmark Images</h1>
        </div>
        <div class="row g-4">
            @for (int i = 1; i < Model.landmarkImg.Count; i++)
            {
                <div class="col-md-6 col-lg-3">
                    <div class="guide-item">
                        <div class="guide-img">
                            <div class="guide-img-efects">
                                <img src="@Url.Content("../LayoutIndex_Edit/images_Landmark/"+Model.landmarkImg[i])" class="img-fluid w-100 rounded-top imagesAttractions" alt="Image">
                            </div>
                            <div class="guide-icon rounded-pill p-2">
                                <a class="btn btn-square btn-primary rounded-circle mx-1" href=""><i class="fab fa-facebook-f"></i></a>
                                <a class="btn btn-square btn-primary rounded-circle mx-1" href=""><i class="fab fa-twitter"></i></a>
                                <a class="btn btn-square btn-primary rounded-circle mx-1" href=""><i class="fab fa-instagram"></i></a>
                                <a class="btn btn-square btn-primary rounded-circle mx-1" href=""><i class="fab fa-linkedin-in"></i></a>
                            </div>
                        </div>
                        <div class="guide-title text-center rounded-bottom p-4">
                            <div class="guide-title-inner">
                                <h4 class="mt-3">Picture @i</h4>
                                @* <p class="mb-0">Designation</p> *@
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
<!-- Travel Guide End -->
<!-- Testimonial Start -->
<div class="container-fluid testimonial py-5">
    <div class="container py-5">
        <div class="mx-auto text-center mb-5" style="max-width: 900px;">
            <h5 class="section-title px-3">Review</h5>
            <h1 class="mb-0">Review Now!!!</h1>
            <a asp-action="AddUserReviewLand" asp-route-landmarkId="@Model.landmarkDetail.LandmarkId">Create New Review</a>
        </div>
        <div class="testimonial-carousel owl-carousel">
            @foreach (var item in Model.landReviews)
            {
                <div class="testimonial-item text-center rounded pb-4">
                    <div class="testimonial-comment bg-light rounded p-4" style="height:500px">
                        <p class="text-center mb-5">
                            @item.review.Comment
                        </p>
                    </div>
                    <div class="testimonial-img p-1">
                        <img src="../img/testimonial-1.jpg" class="img-fluid rounded-circle" alt="Image">
                    </div>
                    <div style="margin-top: -35px;">
                        <h5 class="mb-0">@item.user.Name</h5>
                        @{
                            string dateTimeString = @item.review.Date.ToString();
                            string[] parts = dateTimeString.Split(' ');
                            string datePart = parts[0];
                        }
                        <p class="mb-0">@datePart</p>
                        <div class="d-flex justify-content-center">

                            @for (int i = 0; i < item.review.Rating; i++)
                            {
                                <i class="fas fa-star text-primary"></i>
                            }


                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
<!-- Testimonial End -->