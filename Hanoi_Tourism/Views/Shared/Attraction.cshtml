@using Hanoi_Tourism.ViewModels
@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<HomeStreetListViewModel>

<div class="tab-class text-center">
    <div id="InternationalTab-2" class="tab-pane fade show p-0">
        <div class="InternationalTour-carousel owl-carousel">
            <div class="international-item">
                <img src="../LayoutIndex_Edit/images_Attraction/historical_site_icon.jpg" class="img-fluid w-100 rounded" alt="Image">
                <div class="international-content">
                    <div class="international-info">
                        <h5 class="text-white text-uppercase mb-2">Historical Site</h5>
                        <a href="#" class="btn-hover text-white me-4"><i class="fas fa-map-marker-alt me-1"></i> @Model[0].HistoricalCount Tour Places</a>
                        <a href="#" class="btn-hover text-white"><i class="fa fa-eye ms-2"></i> <span> on @Model[0].StreetsHaveHistoricals++ Street</span></a>
                    </div>
                </div>
                <div class="international-plus-icon">
                    <a asp-controller="Home" asp-action="HistoricalSiteFromMenu" class="my-auto"><i class="fas fa-link fa-2x text-white"></i></a>
                </div>
            </div>
            <div class="international-item">
                <img src="../LayoutIndex_Edit/images_Attraction/cultural_location_icon.jpg" class="img-fluid w-100 rounded" alt="Image">
                <div class="international-content">
