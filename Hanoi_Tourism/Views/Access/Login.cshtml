@{
	Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
@model TUser
<link href="../LayoutAdmin/css/app.css" rel="stylesheet">
@using (Html.BeginForm("Login", "Access", FormMethod.Post))
{
	<div class="text-center">
		<img src="../LayoutAdmin/img/avatars/avatar-6.jpg" alt="Charles Hall" class="img-fluid rounded-circle" width="132" height="132" />
	</div>
	<div class="mb-3">
		<label class="form-label">Email</label>
		@Html.TextBoxFor(x => x.Email, new { @class = "form-control form-control-lg", type = "Username", name = "email", placeholder = "Enter your email" })
	</div>
	<div class="mb-3">
		<label class="form-label">Password</label>
		@Html.TextBoxFor(x => x.Password, new { @class = "form-control form-control-lg", type = "Password", name = "password", placeholder = "Enter your password" })
	</div>
	<small>
		<a asp-action="Register" asp-controller="Access">You don't have an account yet? Register here</a>
	</small>

	<div class="text-center mt-3">
		<button type="submit" class="btn btn-lg btn-primary">Log In</button>
	</div>

}