@{
    ViewData["Title"] = "StreetDepenDistrict";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

@using Hanoi_Tourism.ViewModels
@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<HomeStreetListViewModel>

<div class="col-xl-8" style="clear: both">
    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-lg-6">
                <div class="destination-img">
                    <img style="width: 500px; height: 350px; loading: lazy" class="img-fluid rounded w-100" src="@Url.Content("../LayoutIndex_Edit/images_Street/" + item.StreetImages[0])" alt="">
                    <div class="destination-overlay p-4" style="text-align:left">
                        <a href="#" class="btn btn-primary text-white rounded-pill border py-2 px-3">View Gallery</a>
                        <h4 class="text-white mb-2 mt-3">@item.StreetName Street</h4>
                        <a asp-controller="Home" asp-action="StreetDetail" asp-route-StreetID="@item.StreetID" class="btn-hover text-white">See Details <i class="fa fa-arrow-right ms-2"></i></a>
                    </div>
                    <div class="search-icon">
                        <a href="@Url.Content("../LayoutIndex_Edit/images_Street/" + item.StreetImages[0])" data-lightbox="destination-1"><i class="fa fa-plus-square fa-1x btn btn-light btn-lg-square text-primary"></i></a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<div class="col-xl-4">
    <div class="destination-img h-100">
        <img class="img-fluid rounded w-100 h-100" src="@Url.Content("../LayoutIndex_Edit/images_District/" + Model[0].DistrictImage)" style="object-fit: cover; min-height: 300px;" alt="">
        <div class="destination-overlay p-4" style="text-align:left">
            @* <a href="#" class="btn btn-primary text-white rounded-pill border py-2 px-3">20 Photos</a> *@
            <h4 class="text-white mb-2 mt-3">@Model[0].DistrictName District</h4>
            <a href="#" class="btn-hover text-white">View Details <i class="fa fa-arrow-right ms-2"></i></a>
        </div>
        <div class="search-icon">
            <a href="@Url.Content("../LayoutIndex_Edit/images_District/" + Model[0].DistrictImage)" data-lightbox="destination-4"><i class="fa fa-plus-square fa-1x btn btn-light btn-lg-square text-primary"></i></a>
        </div>
    </div>
</div>
@Html.PagedListPager(Model, page => Url.Action("StreetDependDistrict", new { page = page, districtID = ViewBag.districtID }), new
        X.PagedList.Web.Common.PagedListRenderOptions()
{
    LiElementClasses = new List<String> { "page-item" },
    PageClasses = new List<String> { "page-link" }
})

