                    <div class="international-info">
                        <h5 class="text-white text-uppercase mb-2">Restaurant</h5>
                        <a href="#" class="btn-hover text-white me-4"><i class="fas fa-map-marker-alt me-1"></i> @Model[0].RestaurantCount Tour Places</a>
                        <a href="#" class="btn-hover text-white"><i class="fa fa-eye ms-2"></i> <span> on @Model[0].StreetsHaveRestaurants++ Street</span></a>
                    </div>
                </div>
                <div class="international-plus-icon">
                    <a asp-controller="Home" asp-action="RestaurantFromMenu" class="my-auto"><i class="fas fa-link fa-2x text-white"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>